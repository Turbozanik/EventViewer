<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <com.view.base.view.ValidatableInputLayout
        android:id="@+id/passwordLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="@integer/max_password_length"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:counterOverflowTextAppearance="@style/TextLimitError"
        app:layout_constraintWidth_percent="@dimen/default_button_width_in_percents">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/mEtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_lock_black_24dp"
            android:hint="@string/hint_registration_password"
            android:inputType="textPassword"
            android:singleLine="true" />
    </com.view.base.view.ValidatableInputLayout>

</android.support.constraint.ConstraintLayout>